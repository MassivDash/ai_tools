---
import Layout from '../layouts/Layout.astro'
import ChromaDBManager from '../components/chromadb/ChromaDBManager.svelte'
---

<Layout title='ChromaDB - Vector Database Management'>
  <main transition:animate='fade'>
    <div class='database-container'>
      <h1>ChromaDB Vector Database</h1>
      <p class='description'>
        Manage your vector database collections, upload documents (PDF,
        Markdown), and perform semantic searches across your knowledge base.
      </p>
      <ChromaDBManager client:load />
    </div>
  </main>
</Layout>

<style>
  .database-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary, #100f0f);
    text-align: center;
    transition: color 0.3s ease;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-primary, #333);
    margin-bottom: 2rem;
    text-align: center;
    transition: color 0.3s ease;
  }

  @media screen and (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
  }
</style>
