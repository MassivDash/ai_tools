---
import { icons } from '@iconify-json/mdi'

interface Props {
  name: string
  width?: number | string
  height?: number | string
  class?: string
}

const {
  name,
  width = 24,
  height = 24,
  class: className = ''
}: Props = Astro.props

const iconData = icons.icons[name]
const widthValue = typeof width === 'number' ? `${width}px` : width
const heightValue = typeof height === 'number' ? `${height}px` : height
const viewBox = `0 0 ${icons.width || 24} ${icons.height || 24}`
---

{
  iconData ? (
    <svg
      class={className}
      width={widthValue}
      height={heightValue}
      viewBox={viewBox}
      fill='currentColor'
      xmlns='http://www.w3.org/2000/svg'
      set:html={iconData.body}
    />
  ) : (
    <svg
      class={className}
      width={widthValue}
      height={heightValue}
      viewBox='0 0 24 24'
      fill='currentColor'
      xmlns='http://www.w3.org/2000/svg'
    >
      <path d='M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z' />
    </svg>
  )
}
